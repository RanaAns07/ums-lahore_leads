# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ums_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-refresh-secret-key"
JWT_REFRESH_EXPIRES_IN="7d"

# Application
NODE_ENV="development"
PORT=3000

# Initial Admin Bootstrap
ADMIN_EMAIL="admin@ums.edu"
ADMIN_PASSWORD="ChangeThisPassword123!"
ADMIN_LEGAL_NAME="System Administrator"

# === PHASE 6: INTEGRATIONS ===

# Storage Configuration (S3/Cloudinary)
STORAGE_PROVIDER="local"  # Options: 's3', 'cloudinary', 'local'
S3_BUCKET_NAME="ums-documents"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-aws-access-key"
S3_SECRET_ACCESS_KEY="your-aws-secret-key"
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-key"
CLOUDINARY_API_SECRET="your-cloudinary-secret"

# Email/SMS Notifications
EMAIL_PROVIDER="console"  # Options: 'sendgrid', 'postmark', 'console'
FROM_EMAIL="noreply@ums.edu"
SENDGRID_API_KEY="your-sendgrid-api-key"
POSTMARK_API_KEY="your-postmark-api-key"
SMS_PROVIDER="console"  # Options: 'twilio', 'console'
TWILIO_ACCOUNT_SID="your-twilio-sid"
TWILIO_AUTH_TOKEN="your-twilio-token"
TWILIO_PHONE_NUMBER="+1234567890"

# LMS Integration (Moodle/Canvas)
LMS_PROVIDER="none"  # Options: 'moodle', 'canvas', 'none'
LMS_API_URL="https://lms.ums.edu"
LMS_API_KEY="your-lms-api-key"

# Webhook Security
WEBHOOK_SECRET="your-256-bit-webhook-secret-change-this"
